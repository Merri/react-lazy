# http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,scss}]
charset = utf-8
insert_final_newline = true
indent_size = 4

[{*.json,.travis.yml,.*rc}]
indent_size = 2
